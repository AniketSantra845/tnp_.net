@model List<Company>
@{
    Layout = "_CoOrdLayout";
}
<!--Total Companies page-->
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Companies List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" >
                                <thead>
                                    <tr>
                                        <td>Company Identfication Number</td>
                                        <td>Name</td>
                                        <td>Contact</td>
                                        <td>Alternate Contact</td>
                                        <td>Email</td>
                                        <td>Alternate Email</td>
                                        <td>Action</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.cif</td>
                                            <td>@item.name</td>
                                            <td>@item.contact</td>
                                            <td>@item.alt_contact</td>
                                            <td>@item.email</td>
                                            <td>@item.alt_email</td>
                                            <td>
                                                <a asp-action="Edit_Company" asp-route-id="@item.id">Edit</a>
                                                <a asp-action="Delete_Company" asp-route-id="@item.id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

@model Demo.Models.Session_insert

@{
    ViewData["Title"] = "SessionEdit";
    Layout = "~/Views/Shared/_CoOrdLayout.cshtml";
}

<div class="main-content" style="margin-left:5%;width:112%;">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0">Edit Session Details</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="SessionUpdate">
                                <div asp-validation-summary="ModelOnly" class="text-danger" method="post"></div>
                                <input type="hidden" asp-for="id" />
                                <div class="row">
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Start Date</label>
                                        <input asp-for="start_date" class="form-control" type="date" />
                                        <span asp-validation-for="start_date" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">End Date</label>
                                        <input asp-for="end_date" class="form-control" type="date" />
                                        <span asp-validation-for="end_date" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Label</label>
                                        <input asp-for="label" class="form-control" type="text" />
                                        <span asp-validation-for="label" class="text-danger"></span>
                                    </div>
                                    <div class="form-group mt-3">
                                        <input type="submit" value="Update" class="btn btn-primary" />
                                        <a asp-controller="Session" asp-action="SessionView" class="btn btn-outline-primary">Back</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


@model UploadCsv

@{
    ViewData["Title"] = "Upload CSV";
}


<div class="main-content">
    <div class="page-content">
        <div class="container-fluid mt-5">
            <div class="row">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-body">
                            <form asp-controller="Uploadcsv" asp-action="Import" method="post" enctype="multipart/form-data">
                                <div class="col-md-6 col-md-2">
                                    <label for="example-number-input" class="col col-form-label" col-form-label">Department</label>
                                    <select asp-for=@Model.department_id class="form-select">
                                        <option value="">Select Department</option>
                                        @foreach (var department in Model.Departments)
                                        {
                                            <option value="@department.id">@department.department</option>
                                        }
                                    </select>
                                    <span class="text-danger" asp-validation-for="@Model.department_id"></span>
                                </div>
                                <div class="form-group">
                                    <label>Upload CSV</label>
                                    <input type="file" asp-for="@Model.CSV_File" name="CSV_File" class="form-control " />
                                    <span class="text-danger" asp-validation-for="@Model.CSV_File"></span>
                                </div>
                                <br>
                                <div class="form-group">
                                    <input type="submit" value="Import" class="btn btn-outline-primary" />
                                    <a asp-action="insert_user" class="btn btn-outline-success">Add new User</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
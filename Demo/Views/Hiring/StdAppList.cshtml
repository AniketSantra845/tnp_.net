@model List<Student>
@inject IHttpContextAccessor context;
<!--Total Companies page-->
<div class="main-content" style="margin-left:10%;width:100%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Companies List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Student Name</th>
                                            <th>Enrollment</th>
                                            <th>Gender</th>
                                            <th>Contact</th>
                                            <th>DOB</th>
                                            <th>Adhaar</th>
                                            <th>Pan</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                 <td>@item.surname @item.first_name @item.last_name</td>
                                                <td>@item.enrollment</td>
                                                <td>@item.gender</td>
                                                <td>@item.contact</td>
                                                <td>@item.dob</td>
                                                <td>@item.adhaar</td>
                                                <td>@item.pan</td>
                                                @if (@context.HttpContext.Session.GetInt32("role") == 2)
                                                {
                                                    <td>
                                                        <a asp-controller="Hiring" asp-action="EditHiring" class="btn btn-info waves-effect waves-light" asp-route-id="@item.id">
                                                            Select
                                                        </a>
                                                        <a asp-controller="Hiring" asp-action="DeleteHiring" class="btn btn-info waves-effect waves-light" asp-route-id="@item.id">
                                                            Reject
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#company-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            })
        });
    </script>
}



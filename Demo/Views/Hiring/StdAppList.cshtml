@model List<pendingshortlist>
@inject IHttpContextAccessor context;
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
<!--Total Companies page-->
<div class="main-content" style="margin-left:4%;width:115%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <a asp-controller="Hiring" asp-action="StudentApplications" style="float:right" class="btn btn-outline-primary  mb-2">Back</a>
                            
                            <h4 class="card-title">Students List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Student Name</th>
                                            <th>Enrollment</th>
                                            <th>Gender</th>
                                            <th>Contact</th>
                                            <th>DOB</th>
                                            <th>Adhaar</th>
                                            <th>Pan</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.surname @item.first_name @item.last_name</td>
                                                <td>@item.enrollment</td>
                                                <td>@item.gender</td>
                                                <td>@item.contact</td>
                                                <td>@item.dob</td>
                                                <td>@item.adhaar</td>
                                                <td>@item.pan</td>
                                                @if (@context.HttpContext.Session.GetInt32("role") == 2)
                                                {
                                                    <td>
                                                        <!-- Button trigger modal -->
                                                        <button type="button" class="btn btn-outline-info " data-bs-toggle="modal" data-bs-target="#exampleModal">
                                                            Select
                                                        </button>

                                                        <!-- Modal -->
                                                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title" id="exampleModalLabel">Student Salary Details</h5>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                    <form id="selectform" method="post" asp-controller="Hiring" asp-action="pendingshortlisted" asp-route-id=101 asp-route-sid=@item.id asp-route-hid=@item.hiring_id>
                                                                        <div class="modal-body">
                                                                            <div class="mb-3">
                                                                                <label for="exampleInputEmail1" class="form-label">Stipend</label>
                                                                                <input type="text" name="sti" class="form-control">
                                                                            </div>
                                                                            <div class="mb-3">
                                                                                <label for="exampleInputPassword1" class="form-label">Salary</label>
                                                                                <input type="text" name="sal" class="form-control">
                                                                            </div>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                                                                            <button type="submit" id="submit" class="btn btn-outline-primary">Submit</button>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <a asp-controller="Hiring" asp-action="pendingshortlisted" class="btn btn-outline-danger " asp-route-id=201 asp-route-sid=@item.id asp-route-hid=@item.hiring_id>
                                                            Reject
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{
    
    <script>
        $(document).ready(function () {
            var table = $("#company-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            });
            $('#exampleModal').on('shown.bs.modal', function () {
                $('#myInput').trigger('focus')
            });
            $("#selectform").validate({
                rules: {
                    sti: "required",
                    sal: "required"
                },
                messages: {
                    sti: "Please enter stipend!",
                    sal: "Please enter Salary!"
                },
                submitHandler: function (form) {
                    console.log("Submitted!");
                    form.submit();
                }
            })
        });
    </script>
}


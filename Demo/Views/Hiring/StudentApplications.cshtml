@model List<Company>

<!--Total Companies page-->
<div class="main-content" style="margin-left:7%;width:110%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Companies List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <td>Company Identfication Number</td>
                                            <td>Name</td>
                                            <td>Contact</td>
                                            <td>Alternate Contact</td>
                                            <td>Email</td>
                                            <td>Alternate Email</td>
                                            <td>Action</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.cif</td>
                                                <td>@item.name</td>
                                                <td>@item.contact</td>
                                                <td>@item.alt_contact</td>
                                                <td>@item.email</td>
                                                <td>@item.alt_email</td>
                                                <td>
                                                    <a asp-controller="Hiring" asp-action="StdAppList" class="btn btn-outline-info " asp-route-id="@item.id">
                                                        Details
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#company-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            })
        });
    </script>
}



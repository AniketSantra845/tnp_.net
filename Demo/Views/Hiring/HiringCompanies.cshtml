@model ViewHiring
@inject IHttpContextAccessor context;
<!--Total Companies page-->
<div class="main-content" style="margin-left:10%;width:100%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Companies List</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <th>Company Name</th>
                                            <th>Batch</th>
                                            <th>Designation</th>
                                            <th>Job Location</th>
                                            <th>Joining Data</th>
                                            <th>Start Date</th>
                                            <th>End Date</th>
                                            <th>Interview Mode</th>
                                            <th>Interview Location</th>
                                            <th>Other Requirnments</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Hirings)
                                        {
                                            <tr>
                                                @foreach (var company in Model.Companies)
                                                {
                                                    if(item.company_id == company.id)
                                                    {
                                                        <td>@company.name</td>
                                                    }
                                                }
                                                <td>@item.session_id</td>
                                                <td>@item.designation</td>
                                                <td>@item.joblocation</td>
                                                <td>@item.joindate</td>
                                                <td>@item.startdate</td>
                                                <td>@item.enddate</td>
                                                <td>@item.interview_mode</td>
                                                <td>@item.interview_location</td>
                                                <td>@item.other_requirement</td>
                                                @if(@context.HttpContext.Session.GetInt32("role") == 1){
                                                    <td>
                                                        <a asp-controller="Company" asp-action="CompanyDetails" class="btn btn-info waves-effect waves-light" asp-route-id="@item.company_id">
                                                            Info
                                                        </a>
                                                    </td>
                                                }
                                                else if (@context.HttpContext.Session.GetInt32("role") == 2)
                                                {
                                                    <td>
                                                        <a asp-controller="Hiring" asp-action="EditHiring" class="btn btn-info waves-effect waves-light" asp-route-id="@item.id">
                                                            Edit
                                                        </a>
                                                        <a asp-controller="Hiring" asp-action="DeleteHiring" class="btn btn-info waves-effect waves-light" asp-route-id="@item.id">
                                                            Delete
                                                        </a>
                                                    </td>
                                                }
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#company-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            })
        });
    </script>
}



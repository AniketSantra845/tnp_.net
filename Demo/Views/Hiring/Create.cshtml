@model ViewCompnaySession
@{
    ViewData["Title"] = "Create Hiring";
}
@{
    Layout = "_CoOrdLayout";
}
<div class="main-content">
    <div class="page-content">
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0">Add Hiring Details</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <form asp-controller="Company" asp-action="Create" method="post">
                                <div class="row">
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class=" col-form-label">Company Name</label>
                                        <select class="form-select">
                                            @foreach(var company in Model.Companies)
                                            {
                                                <option value="@company.id">@company.name</option>
                                            }
                                        </select>
                                        @*<span asp-validation-for="company_id" class="text-danger"></span>*@
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class=" col-form-label">Session Name</label>
                                        <select class="form-select">
                                        @foreach(var sesssion in Model.Session)
                                        {
                                            <option value="@sesssion.id">@sesssion.label</option>
                                        }
                                        </select>
                                        @*<span asp-validation-for="session_id" class="text-danger"></span>*@
                                    </div>
                                    @*<div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class=" col-form-label">Designation</label>
                                        <input asp-for="designation" class="form-control" type="text" name="designation" id="designation">
                                        <span asp-validation-for="designation" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Bond</label>
                                        <input asp-for="bond" class="form-control" type="text" name="bond" id="bond">
                                        <span asp-validation-for="bond" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Bond Condition</label>
                                        <input asp-for="bond_condition" class="form-control" type="text" name="bond_condition" id="bond_condition">
                                        <span asp-validation-for="bond_condition" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Salary</label>
                                        <input asp-for="fix_salary" class="form-control" type="text" name="fix_salary" id="fix_salary">
                                        <span asp-validation-for="fix_salary" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Bonus</label>
                                        <input asp-for="bonus" class="form-control" type="text" name="bonus" id="bonus">
                                        <span asp-validation-for="bonus" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">About</label>
                                        <input asp-for="performance_inc" class="form-control" type="text" name="performance_inc" id="performance_inc">
                                        <span asp-validation-for="performance_inc" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Total Salary</label>
                                        <input asp-for="total_salary" class="form-control" type="text" name="total_salary" id="total_salary">
                                        <span asp-validation-for="total_salary" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Job Location</label>
                                        <input asp-for="joblocation" class="form-control" type="text" name="joblocation" id="joblocation">
                                        <span asp-validation-for="joblocation" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Join Date</label>
                                        <input asp-for="joindate" class="form-control" type="date" name="joindate" id="joindate">
                                        <span asp-validation-for="joindate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Start Date</label>
                                        <input asp-for="startdate" class="form-control" type="date" name="startdate" id="startdate">
                                        <span asp-validation-for="startdate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">End Date</label>
                                        <input asp-for="enddate" class="form-control" type="date" name="enddate" id="enddate">
                                        <span asp-validation-for="enddate" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Interview Mode</label>
                                        <input asp-for="interview_mode" class="form-control" type="text" name="interview_mode" id="interview_mode">
                                        <span asp-validation-for="interview_mode" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Interview location</label>
                                        <input asp-for="interview_location" class="form-control" type="text" name="interview_location" id="interview_location">
                                        <span asp-validation-for="interview_location" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 col-md-2">
                                        <label for="example-number-input" class="col col-form-label">Other Requirement</label>
                                        <input asp-for="other_requirement" class="form-control" type="text" name="other_requirement" id="other_requirement">
                                        <span asp-validation-for="other_requirement" class="text-danger"></span>
                                    </div>*@
                                </div>
                                <div class="form-group mt-3">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
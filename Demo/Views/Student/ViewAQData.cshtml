@model List<AdditionalQualif>
<div class="main-content" style="width:100%;margin-left:10%">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <a asp-controller="Student" asp-action="AddAQData" style="float:right" class="btn btn-primary waves-effect waves-light mb-2">Add New Data</a>

                            <h4 class="card-title">Additional Qualification</h4>
                            <p class="card-title-desc">

                            </p>
                            <table class="table table-striped table-bordered dt-responsive" id="company-table" style="width:100%;">
                                @if (Model.Count == 0)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <th>title</th>
                                            <th>specialization</th>
                                            <th>other</th>
                                            <th>score</th>
                                            <th>remarks</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                       @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.title</td>
                                                <td>@item.specialization</td>
                                                <td>@item.other</td>
                                                <td>@item.score out of total @item.scoreoutof</td>
                                                <td>@item.remarks</td>
                                                <td>
                                                    <a asp-controller="Student" class="btn btn-outline-primary" asp-action="EditAQData" asp-route-id="@item.id">Edit</a>
                                                </td>
                                            </tr>
                                      }

                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->
        </div>
    </div>
</div>
@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#intern-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            })
        });
    </script>
}

@model Student
<div class="main-content" style="width:100%;margin-left:10%;">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Edit your profile - Student Additional Qualification</h4>
                            <p class="card-title-desc">Verify all information again before updating.</p>
                            <form asp-controller="Student" method="post" asp-action="edit_twelve_data" class="needs-validation custom-validation" novalidate>
                                <input type="hidden" asp-for="id" />
                                <input type="hidden" asp-for="session_id" />
                                <input type="hidden" asp-for="user_id" />
                                <input type="hidden" asp-for="department_id" />
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_school">Title</label>
                                            <input asp-for="twelve_school" class="form-control" placeholder="enter title here" type="text" name="twelve_school" id="twelve_school">
                                            <span asp-validation-for="twelve_school" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_passyear">Specialization</label>
                                            <input asp-for="twelve_passyear" class="form-control" id="first_name" placeholder="enter your specialization" type="text" name="twelve_passyear" id="twelve_passyear">
                                            <span asp-validation-for="twelve_passyear" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_schoolpincode">Total Score</label>
                                            <input asp-for="enrollment" class="form-control" id="twelve_schoolpincode" placeholder="total marks here" type="text" name="twelve_schoolpincode" id="twelve_schoolpincode">
                                            <span asp-validation-for="twelve_schoolpincode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_schoolcity">Marks scored out of total</label>
                                            <input asp-for="twelve_schoolcity" class="form-control" placeholder="enter marks scored" type="text" name="twelve_schoolcity" id="twelve_schoolcity">
                                            <span asp-validation-for="twelve_schoolcity" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_score">Remarks</label>
                                            <input asp-for="twelve_board" class="form-control" placeholder="enter remarks here" type="text" name="twelve_board" id="twelve_board">
                                            <span asp-validation-for="twelve_board" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="mb-3">
                                            <label class="form-label" for="twelve_schooladdress	">Other Details</label>
                                            <input asp-for="twelve_schooladdress" class="form-control" placeholder="enter additional details" type="text" name="twelve_schooladdress" id="twelve_schooladdress">
                                            <span asp-validation-for="last_name" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>

                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div> <!-- end col -->
            </div>
        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
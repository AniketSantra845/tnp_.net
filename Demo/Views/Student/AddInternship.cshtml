@model Internships
@using Microsoft.AspNetCore.Mvc;
@inject IHttpContextAccessor context;
<div class="main-content" style="width:100%;margin-left:10%;">

    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title">Add new intership - Student</h4>
                            <p class="card-title-desc">Verify all information again before insertion.</p>
                            <form asp-controller="Student" method="post" asp-action="AddInternship" class="needs-validation custom-validation" novalidate>
                                <input type="hidden" asp-for="student_id" value="@context.HttpContext.Session.GetInt32("studentid")" />
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="title">Internship Title</label>
                                            <input asp-for="title" class="form-control" placeholder="Internship Title" type="text" name="title" id="title">
                                            <span asp-validation-for="title" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="company">Company name</label>
                                            <input asp-for="company" class="form-control" placeholder="Enter Company Name" type="text" name="company" id="company">
                                            <span asp-validation-for="company" class="text-danger"></span>
                                        </div>
                                    </div>
                                   
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="duration">Internship Duration</label>
                                            <input asp-for="duration" class="form-control" placeholder="Enter duration of internship" type="text" name="duration" id="duration">
                                            <span asp-validation-for="duration" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-9">
                                        <div class="mb-3">
                                            <label class="form-label" for="address">Address</label>
                                            <input asp-for="address" class="form-control" placeholder="Enter address of company" type="text" name="address" id="address">
                                            <span asp-validation-for="address" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="mb-3">
                                            <label class="form-label" for="city">City</label>
                                            <input asp-for="city" class="form-control" placeholder="Enter city of company" type="text" name="city" id="city">
                                            <span asp-validation-for="city" class="text-danger"></span>
                                        </div>
                                    </div>



                                </div>

                                <div class="row">
                                    
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="pincode">Pincode</label>
                                            <input asp-for="pincode" class="form-control" placeholder="Enter Pincode" type="text" name="pincode" id="pincode">
                                            <span asp-validation-for="pincode" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="specialization">Specialization</label>
                                            <div>
                                                <input asp-for="specialization" class="form-control" placeholder="Enter specialization" type="text" name="specialization" id="specialization">
                                                <span asp-validation-for="specialization" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="mb-3">
                                            <label class="form-label" for="remarks">Remarks</label>
                                            <input asp-for="remarks" class="form-control" placeholder="Enter remarks" type="text" name="remarks" id="remarks">
                                            <span asp-validation-for="remarks" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>


                                <button class="btn btn-primary" type="submit">Submit form</button>
                            </form>
                        </div>
                    </div>
                    <!-- end card -->
                </div> <!-- end col -->
            </div>

        </div>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
@model List<Department>
@{
    ViewData["Title"] = "View_Department";
}
@{
    Layout = "_CoOrdLayout";
}

<div class="main-content" style="margin-left:5%;width:112%;">
    <div class="page-content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Department List</h4>
                            <p class="card-title-desc">
                            </p>
                            <div class="float-end">
                                <a class="btn btn-outline-primary" asp-action="UploadDepartment">Upload Csv</a>
                                <a class="btn btn-outline-primary" asp-action="Insert_dept">Add department</a>
                            </div>
                            <br />
                            <br />
                            <br/>
                            <table class="table table-striped table-bordered dt-responsive" id="department-table" style="width:100%;">
                                @if (Model == null)
                                {
                                    <p>There is no data to be displayed</p>
                                }
                                else
                                {
                                    <thead>
                                        <tr class="table-primary">
                                            <td width="85%">Department Name</td>
                                            <td>Action</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.department</td>
                                                <td>
                                                    <a class="btn btn-outline-primary" asp-action="Edit_Department" asp-route-id="@item.id">Edit</a>
                                                    <a class="btn btn-outline-danger" asp-action="Delete_Department" onclick="if(!confirm('Are you sure that you want to permanently delete the selected element?'))return false" asp-route-id="@item.id">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                }
                            </table>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->

        </div>
    </div>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            var table = $("#department-table").DataTable({
                "scrollX": true,
                pageLength: 5,
                lengthMenu: [5, 10, 20]
            })
        });
    </script>
}



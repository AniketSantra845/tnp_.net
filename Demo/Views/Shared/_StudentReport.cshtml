@model List<Student>

<table id="sreport" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    @if (Model == null)
    {
        <p>There is no data to be displayed</p>
    }
    else
    {
        <thead>
            <tr class="table-primary">
                <th>Student Name</th>
                <th>Enrollment</th>
                <th>Gender</th>
                <th>Contact</th>
                <th>DOB</th>
                <th>Adhaar</th>
                <th>Pan</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.surname @item.first_name @item.last_name</td>
                    <td>@item.enrollment</td>
                    <td>@item.gender</td>
                    <td>@item.contact</td>
                    <td>@item.dob</td>
                    <td>@item.adhaar</td>
                    <td>@item.pan</td>
                </tr>
            }
        </tbody>
    }
</table>
